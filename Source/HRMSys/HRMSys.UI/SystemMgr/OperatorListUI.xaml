<Window x:Class="HRMSys.UI.SystemMgr.OperatorListUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="操作员管理" Height="300" Width="500" Loaded="Window_Loaded">
    <Grid>
        <DockPanel>
            <ToolBar DockPanel.Dock="Top" Height="30">
                <Button Click="ButtonAdd_Click" Name="BtnAdd" ToolTip="添加操作员">
                    <Image Source="../Images/add.ico" />
                </Button>
                <Button Name="BtnEdit" Click="BtnEdit_Click" ToolTip="编辑操作员">
                    <Image Source="../Images/Edit.ico" />
                </Button>
                <Button Name="BtnCancel" Click="BtnCancel_Click" ToolTip="删除操作员">
                    <Image Source="../Images/Cancel.ico" />
                </Button>
                
            </ToolBar>
            <DataGrid DockPanel.Dock="Top" AutoGenerateColumns="False" Name="gridOperator" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="100" Header="用户名" Binding="{Binding UserName}" />
                    <DataGridTextColumn Width="100" Header="真实姓名" Binding="{Binding RealName}" />
                    <DataGridCheckBoxColumn Width="100" Header="是否锁定" Binding="{Binding IsLocked}" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>